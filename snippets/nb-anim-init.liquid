<script>
(function(){
  if(!('IntersectionObserver' in window)) {
    document.querySelectorAll('[data-anim]').forEach(function(el){ el.classList.add('is-inview'); });
    return;
  }
  var io = new IntersectionObserver(function(entries){
    entries.forEach(function(e){
      if(e.isIntersecting){ e.target.classList.add('is-inview'); io.unobserve(e.target); }
    });
  }, { threshold: .12 });
  document.querySelectorAll('[data-anim]').forEach(function(el){ io.observe(el); });
})();
</script>
