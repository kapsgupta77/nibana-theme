{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-creative-layout-{{ ai_gen_id }} {
    position: relative;
    width: 100vw;
    margin-left: calc(-50vw + 50%);
    overflow: hidden;
  }

  .ai-creative-section-{{ ai_gen_id }} {
    position: relative;
    min-height: 85vh;
    display: flex;
    align-items: center;
    overflow: hidden;
    clip-path: polygon(0 0, 100% 0, 100% 85%, 0 100%);
    margin-bottom: -10vh;
    opacity: 0;
    transform: translateY(50px);
    transition: all 1s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    width: 100%;
  }

  .ai-creative-section-{{ ai_gen_id }}:nth-child(even) {
    clip-path: polygon(0 15%, 100% 0, 100% 100%, 0 100%);
    flex-direction: row-reverse;
  }

  .ai-creative-section-{{ ai_gen_id }}:last-child {
    clip-path: polygon(0 15%, 100% 0, 100% 100%, 0 100%);
    margin-bottom: 0;
  }

  .ai-creative-section-{{ ai_gen_id }}.ai-in-view-{{ ai_gen_id }} {
    opacity: 1;
    transform: translateY(0);
  }

  .ai-creative-content-side-{{ ai_gen_id }} {
    flex: 1;
    padding: 50px 60px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    position: relative;
    z-index: 2;
    background: {{ block.settings.content_bg_color }};
    width: 50%;
    min-width: 50%;
  }

  .ai-creative-image-side-{{ ai_gen_id }} {
    flex: 1;
    position: relative;
    overflow: hidden;
    min-height: 85vh;
    width: 50%;
    min-width: 50%;
  }

  .ai-creative-bg-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 120%;
    object-fit: cover;
    object-position: center;
    transform: scale(1.2) translateY(30px);
    transition: transform 1.2s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  .ai-creative-image-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 120%;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    transform: scale(1.2) translateY(30px);
    transition: transform 1.2s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  .ai-creative-image-placeholder-{{ ai_gen_id }} svg {
    width: 250px;
    height: 250px;
    opacity: 0.3;
    color: white;
  }

  .ai-creative-section-{{ ai_gen_id }}.ai-in-view-{{ ai_gen_id }} .ai-creative-bg-image-{{ ai_gen_id }},
  .ai-creative-section-{{ ai_gen_id }}.ai-in-view-{{ ai_gen_id }} .ai-creative-image-placeholder-{{ ai_gen_id }} {
    transform: scale(1) translateY(0);
  }

  .ai-creative-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(45deg, {{ block.settings.overlay_color_1 }}, {{ block.settings.overlay_color_2 }});
    z-index: 1;
    opacity: 0.7;
    transition: opacity 0.8s ease;
  }

  .ai-creative-section-{{ ai_gen_id }}.ai-in-view-{{ ai_gen_id }} .ai-creative-overlay-{{ ai_gen_id }} {
    opacity: 0.5;
  }

  .ai-creative-floating-shape-{{ ai_gen_id }} {
    position: absolute;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    z-index: 2;
    opacity: 0;
    transform: scale(0);
    transition: all 1s ease;
  }

  .ai-creative-section-{{ ai_gen_id }}.ai-in-view-{{ ai_gen_id }} .ai-creative-floating-shape-{{ ai_gen_id }} {
    opacity: 1;
    transform: scale(1);
  }

  .ai-creative-shape-1-{{ ai_gen_id }} {
    width: 150px;
    height: 150px;
    top: 10%;
    right: 10%;
    transition-delay: 0.3s;
  }

  .ai-creative-shape-2-{{ ai_gen_id }} {
    width: 100px;
    height: 100px;
    bottom: 20%;
    left: 15%;
    transition-delay: 0.5s;
  }

  .ai-creative-shape-3-{{ ai_gen_id }} {
    width: 60px;
    height: 60px;
    top: 60%;
    right: 25%;
    transition-delay: 0.7s;
  }

  .ai-creative-content-wrapper-{{ ai_gen_id }} {
    max-width: 600px;
    opacity: 0;
    transform: translateX(-80px);
    transition: all 1s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    transition-delay: 0.2s;
  }

  .ai-creative-section-{{ ai_gen_id }}.ai-in-view-{{ ai_gen_id }} .ai-creative-content-wrapper-{{ ai_gen_id }} {
    opacity: 1;
    transform: translateX(0);
  }

  .ai-creative-section-{{ ai_gen_id }}:nth-child(even) .ai-creative-content-wrapper-{{ ai_gen_id }} {
    transform: translateX(80px);margin-left: auto;
    text-align: right;
  }

  .ai-creative-section-{{ ai_gen_id }}:nth-child(even).ai-in-view-{{ ai_gen_id }} .ai-creative-content-wrapper-{{ ai_gen_id }} {
    transform: translateX(0);
  }

  .ai-creative-eyebrow-{{ ai_gen_id }} {
    font-size: {{ block.settings.eyebrow_size }}px;
    color: {{ block.settings.accent_color }};
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 2px;
    margin-bottom: 12px;
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.8s ease;
    transition-delay: 0.4s;
  }

  .ai-creative-section-{{ ai_gen_id }}.ai-in-view-{{ ai_gen_id }} .ai-creative-eyebrow-{{ ai_gen_id }} {
    opacity: 1;
    transform: translateY(0);
  }

  .ai-creative-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    font-weight: 800;
    line-height: 1.1;
    margin: 0 0 16px 0;
    opacity: 0;
    transform: translateY(40px) scale(0.9);
    transition: all 1s ease;
    transition-delay: 0.6s;
  }

  .ai-creative-section-{{ ai_gen_id }}.ai-in-view-{{ ai_gen_id }} .ai-creative-heading-{{ ai_gen_id }} {
    opacity: 1;
    transform: translateY(0) scale(1);
  }

  .ai-creative-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1.6;
    margin-bottom: 30px;
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.8s ease;
    transition-delay: 0.8s;
  }

  .ai-creative-section-{{ ai_gen_id }}.ai-in-view-{{ ai_gen_id }} .ai-creative-text-{{ ai_gen_id }} {
    opacity: 1;
    transform: translateY(0);
  }

  .ai-creative-buttons-{{ ai_gen_id }} {
    display: flex;
    gap: 12px;
    flex-wrap: wrap;
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.8s ease;
    transition-delay: 1s;
  }

  .ai-creative-section-{{ ai_gen_id }}.ai-in-view-{{ ai_gen_id }} .ai-creative-buttons-{{ ai_gen_id }} {
    opacity: 1;
    transform: translateY(0);
  }

  .ai-creative-section-{{ ai_gen_id }}:nth-child(even) .ai-creative-buttons-{{ ai_gen_id }} {
    justify-content: flex-end;
  }

  .ai-creative-btn-primary-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    padding: 14px 28px;
    background: {{ block.settings.primary_button_color }};
    color: {{ block.settings.primary_button_text }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-weight: 600;
    font-size: 15px;
    transition: all 0.4s ease;
    border: none;
    cursor: pointer;
    position: relative;
    overflow: hidden;
    transform: scale(1);
  }

  .ai-creative-btn-primary-{{ ai_gen_id }}::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.6s ease;
  }

  .ai-creative-btn-primary-{{ ai_gen_id }}:hover::before {
    left: 100%;
  }

  .ai-creative-btn-primary-{{ ai_gen_id }}:hover {
    background: {{ block.settings.primary_button_hover }};
    transform: translateY(-3px) scale(1.05);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
  }

  .ai-creative-btn-secondary-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    padding: 14px 28px;
    background: transparent;
    color: {{ block.settings.secondary_button_color }};
    text-decoration: none;
    border: 2px solid {{ block.settings.secondary_button_color }};
    border-radius: {{ block.settings.button_border_radius }}px;
    font-weight: 600;
    font-size: 15px;
    transition: all 0.4s ease;
    cursor: pointer;
    position: relative;
    overflow: hidden;}

  .ai-creative-btn-secondary-{{ ai_gen_id }}::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: {{ block.settings.secondary_button_color }};
    transition: left 0.4s ease;
    z-index: -1;
  }

  .ai-creative-btn-secondary-{{ ai_gen_id }}:hover::before {
    left: 0;
  }

  .ai-creative-btn-secondary-{{ ai_gen_id }}:hover {
    color: {{ block.settings.secondary_button_text }};
    transform: translateY(-3px) scale(1.05);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
  }

  .ai-creative-decorative-line-{{ ai_gen_id }} {
    position: absolute;
    width: 80px;
    height: 3px;
    background: {{ block.settings.accent_color }};
    border-radius: 2px;
    top: 0;
    left: 0;
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 1s ease;
    transition-delay: 1.2s;
  }

  .ai-creative-section-{{ ai_gen_id }}.ai-in-view-{{ ai_gen_id }} .ai-creative-decorative-line-{{ ai_gen_id }} {
    transform: scaleX(1);
  }

  .ai-creative-section-{{ ai_gen_id }}:nth-child(even) .ai-creative-decorative-line-{{ ai_gen_id }} {
    right: 0;
    left: auto;
    transform-origin: right;
  }

  .ai-creative-stats-{{ ai_gen_id }} {
    display: flex;
    gap: 30px;
    margin-top: 30px;
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.8s ease;
    transition-delay: 1.4s;
  }

  .ai-creative-section-{{ ai_gen_id }}.ai-in-view-{{ ai_gen_id }} .ai-creative-stats-{{ ai_gen_id }} {
    opacity: 1;
    transform: translateY(0);
  }

  .ai-creative-stat-{{ ai_gen_id }} {
    text-align: center;}

  .ai-creative-section-{{ ai_gen_id }}:nth-child(even) .ai-creative-stat-{{ ai_gen_id }} {
    text-align: center;
  }

  .ai-creative-stat-number-{{ ai_gen_id }} {
    font-size: 28px;
    font-weight: 800;
    color: {{ block.settings.accent_color }};
    display: block;
    line-height: 1;
    transform: scale(0);
    transition: transform 0.6s ease;
  }

  .ai-creative-section-{{ ai_gen_id }}.ai-in-view-{{ ai_gen_id }} .ai-creative-stat-number-{{ ai_gen_id }} {
    transform: scale(1);
  }

  .ai-creative-stat-label-{{ ai_gen_id }} {
    font-size: 12px;
    color: {{ block.settings.text_color }};
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-top: 6px;
  }

  .ai-creative-scroll-indicator-{{ ai_gen_id }} {
    position: fixed;
    right: 25px;
    top: 50%;
    transform: translateY(-50%);
    z-index: 1000;
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .ai-creative-scroll-dot-{{ ai_gen_id }} {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.4);
    cursor: pointer;
    transition: all 0.4s ease;
    position: relative;
    transform: scale(1);
  }

  .ai-creative-scroll-dot-{{ ai_gen_id }}.ai-active-{{ ai_gen_id }} {
    background: {{ block.settings.accent_color }};
    transform: scale(1.4);
  }

  .ai-creative-scroll-dot-{{ ai_gen_id }}::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 20px;
    height: 20px;
    border: 2px solid transparent;
    border-radius: 50%;
    transition: border-color 0.4s ease;
  }

  .ai-creative-scroll-dot-{{ ai_gen_id }}.ai-active-{{ ai_gen_id }}::after {
    border-color: rgba(255, 255, 255, 0.6);
  }

  .ai-creative-scroll-dot-{{ ai_gen_id }}:hover {
    transform: scale(1.2);
  }

  .ai-creative-scroll-dot-{{ ai_gen_id }}.ai-active-{{ ai_gen_id }}:hover {
    transform: scale(1.6);
  }

  @media screen and (max-width: 1200px) {
    .ai-creative-content-side-{{ ai_gen_id }} {
      padding: 40px 40px;
    }

    .ai-creative-content-wrapper-{{ ai_gen_id }} {
      max-width: 500px;
    }

    .ai-creative-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.9 }}px;
    }
  }

  @media screen and (max-width: 1024px) {
    .ai-creative-section-{{ ai_gen_id }} {
      flex-direction: column;
      clip-path: none;
      margin-bottom: 0;
      min-height: auto;
    }

    .ai-creative-section-{{ ai_gen_id }}:nth-child(even) {
      flex-direction: column;
      clip-path: none;
    }

    .ai-creative-content-side-{{ ai_gen_id }} {
      padding: 40px 30px;
      min-height: 40vh;
      width: 100%;
    }

    .ai-creative-image-side-{{ ai_gen_id }} {
      min-height: 40vh;
      order: -1;
      width: 100%;
    }

    .ai-creative-section-{{ ai_gen_id }}:nth-child(even) .ai-creative-image-side-{{ ai_gen_id }} {
      order: -1;
    }

    .ai-creative-content-wrapper-{{ ai_gen_id }},
    .ai-creative-section-{{ ai_gen_id }}:nth-child(even) .ai-creative-content-wrapper-{{ ai_gen_id }} {
      text-align: center;margin-left: auto;
      margin-right: auto;
    }

    .ai-creative-buttons-{{ ai_gen_id }},
    .ai-creative-section-{{ ai_gen_id }}:nth-child(even) .ai-creative-buttons-{{ ai_gen_id }} {
      justify-content: center;
    }

    .ai-creative-stats-{{ ai_gen_id }} {
      justify-content: center;gap: 20px;
    }

    .ai-creative-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-creative-scroll-indicator-{{ ai_gen_id }} {
      display: none;
    }
  }

  @media screen and (max-width: 768px) {
    .ai-creative-content-side-{{ ai_gen_id }} {
      padding: 30px 20px;
    }

    .ai-creative-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.6 }}px;
    }

    .ai-creative-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.9 }}px;
    }

    .ai-creative-buttons-{{ ai_gen_id }} {
      flex-direction: column;
      align-items: center;gap: 10px;
    }

    .ai-creative-btn-primary-{{ ai_gen_id }},
    .ai-creative-btn-secondary-{{ ai_gen_id }} {
      width: 100%;
      max-width: 250px;
      justify-content: center;padding: 12px 24px;
    }

    .ai-creative-stats-{{ ai_gen_id }} {
      flex-direction: column;
      gap: 15px;
    }

    .ai-creative-stat-number-{{ ai_gen_id }} {
      font-size: 24px;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .ai-creative-section-{{ ai_gen_id }},
    .ai-creative-content-wrapper-{{ ai_gen_id }},
    .ai-creative-eyebrow-{{ ai_gen_id }},
    .ai-creative-heading-{{ ai_gen_id }},
    .ai-creative-text-{{ ai_gen_id }},
    .ai-creative-buttons-{{ ai_gen_id }},
    .ai-creative-stats-{{ ai_gen_id }},
    .ai-creative-decorative-line-{{ ai_gen_id }},
    .ai-creative-bg-image-{{ ai_gen_id }},
    .ai-creative-image-placeholder-{{ ai_gen_id }},
    .ai-creative-floating-shape-{{ ai_gen_id }},
    .ai-creative-overlay-{{ ai_gen_id }},
    .ai-creative-stat-number-{{ ai_gen_id }} {
      transition: none;
      transform: none;
      opacity: 1;
    }
  }
{% endstyle %}

