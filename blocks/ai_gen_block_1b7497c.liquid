<script>
  (function() {
    class CreativeDiagonalLayout{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.sections = [];
        this.dots = [];
        this.currentSection = 0;
        this.observer = null;
        this.scrollTimeout = null;}

      connectedCallback() {
        this.sections = Array.from(this.querySelectorAll('.ai-creative-section-{{ ai_gen_id }}'));
        this.dots = Array.from(this.querySelectorAll('.ai-creative-scroll-dot-{{ ai_gen_id }}'));
        
        this.setupIntersectionObserver();
        this.setupDotNavigation();
        this.setupScrollEffects();
        this.setupParallaxScrolling();
        
        if (this.sections.length > 0) {
          this.updateActiveSection(0);
        }
      }

      setupIntersectionObserver() {
        const options = {
          threshold: 0.2,
          rootMargin: '-10% 0px -10% 0px'
        };

        this.observer = new IntersectionObserver((entries) => {
          entries.forEach(entry => {
            if (entry.isIntersecting) {
              entry.target.classList.add('ai-in-view-{{ ai_gen_id }}');
              const sectionIndex = parseInt(entry.target.dataset.section);
              this.updateActiveSection(sectionIndex);
              this.animateStatsNumbers(entry.target);
            } else {
              entry.target.classList.remove('ai-in-view-{{ ai_gen_id }}');
            }
          });
        }, options);

        this.sections.forEach(section => {
          this.observer.observe(section);
        });
      }

      setupDotNavigation() {
        this.dots.forEach((dot, index) => {
          dot.addEventListener('click', () => {
            const targetSection = this.sections[index];
            if (targetSection) {
              targetSection.scrollIntoView({ 
                behavior: 'smooth',
                block: 'start'
              });
            }
          });

          dot.addEventListener('mouseenter', () => {
            if (!dot.classList.contains('ai-active-{{ ai_gen_id }}')) {
              dot.style.transform = 'scale(1.2)';
            }
          });

          dot.addEventListener('mouseleave', () => {
            if (!dot.classList.contains('ai-active-{{ ai_gen_id }}')) {
              dot.style.transform = 'scale(1)';
            }
          });
        });
      }

      setupScrollEffects() {
        let ticking = false;
        
        const handleScroll = () => {
          if (!ticking) {
            requestAnimationFrame(() => {
              this.updateParallaxEffects();
              this.updateFloatingShapes();
              ticking = false;
            });
            ticking = true;
          }
        };

        window.addEventListener('scroll', handleScroll, { passive: true });}

      setupParallaxScrolling() {
        if (window.matchMedia('(prefers-reduced-motion: reduce)').matches) {
          return;
        }

        window.addEventListener('scroll', () => {
          clearTimeout(this.scrollTimeout);
          this.scrollTimeout = setTimeout(() => {
            this.updateScrollBasedAnimations();
          }, 10);
        }, { passive: true });
      }

      updateActiveSection(index) {
        this.currentSection = index;
        this.dots.forEach((dot, i) => {
          if (i === index) {
            dot.classList.add('ai-active-{{ ai_gen_id }}');
            dot.style.transform = 'scale(1.4)';
          } else {
            dot.classList.remove('ai-active-{{ ai_gen_id }}');
            dot.style.transform = 'scale(1)';
          }
        });
      }

      updateParallaxEffects() {
        if (window.matchMedia('(prefers-reduced-motion: reduce)').matches) {
          return;
        }

        const scrollTop = window.pageYOffset;
        this.sections.forEach((section, index) => {
          const rect = section.getBoundingClientRect();
          const isVisible = rect.top < window.innerHeight && rect.bottom > 0;
          
          if (isVisible) {
            const scrollProgress = Math.max(0, Math.min(1,
              (window.innerHeight - rect.top) / (window.innerHeight + rect.height)
            ));
            
            const imageElement = section.querySelector('.ai-creative-bg-image-{{ ai_gen_id }}, .ai-creative-image-placeholder-{{ ai_gen_id }}');
            const overlay = section.querySelector('.ai-creative-overlay-{{ ai_gen_id }}');
            if (imageElement) {
              const parallaxOffset = (scrollProgress - 0.5) * 30;
              const scale = 1 + (scrollProgress * 0.1);
              imageElement.style.transform = `scale(${scale}) translateY(${parallaxOffset}px)`;}
            
            if (overlay) {
              const opacity = 0.3 + (scrollProgress * 0.4);
              overlay.style.opacity = Math.min(0.7, opacity);
            }
          }
        });
      }

      updateFloatingShapes() {
        if (window.matchMedia('(prefers-reduced-motion: reduce)').matches) {
          return;
        }

        const scrollTop = window.pageYOffset;
        this.sections.forEach((section) => {
          const rect = section.getBoundingClientRect();
          const isVisible = rect.top < window.innerHeight && rect.bottom > 0;
          
          if (isVisible) {
            const shapes = section.querySelectorAll('.ai-creative-floating-shape-{{ ai_gen_id }}');
            const scrollProgress = (window.innerHeight - rect.top) / (window.innerHeight + rect.height);
            
            shapes.forEach((shape, shapeIndex) => {
              const speed = 0.5 + (shapeIndex * 0.3);
              const offset = scrollProgress *50* speed;
              const rotation = scrollProgress * 180 * (shapeIndex + 1);
              const scale = 0.8 + (scrollProgress * 0.4);
              
              shape.style.transform = `translateY(${offset}px) rotate(${rotation}deg) scale(${scale})`;
            });
          }
        });
      }

      updateScrollBasedAnimations() {
        if (window.matchMedia('(prefers-reduced-motion: reduce)').matches) {
          return;
        }

        this.sections.forEach((section) => {
          const rect = section.getBoundingClientRect();
          const isInViewport = rect.top < window.innerHeight * 0.8 && rect.bottom > window.innerHeight * 0.2;
          
          if (isInViewport && !section.classList.contains('ai-in-view-{{ ai_gen_id }}')) {
            section.classList.add('ai-in-view-{{ ai_gen_id }}');
            this.triggerStaggeredAnimations(section);
          }
        });
      }

      triggerStaggeredAnimations(section) {
        const animatedElements = section.querySelectorAll(
          '.ai-creative-eyebrow-{{ ai_gen_id }}, .ai-creative-heading-{{ ai_gen_id }}, .ai-creative-text-{{ ai_gen_id }}, .ai-creative-buttons-{{ ai_gen_id }}, .ai-creative-stats-{{ ai_gen_id }}'
        );
        
        animatedElements.forEach((element, index) => {
          setTimeout(() => {
            element.style.transform = 'translateY(0)';
            element.style.opacity = '1';
          }, index * 100);
        });
      }

      animateStatsNumbers(section) {
        const statNumbers = section.querySelectorAll('.ai-creative-stat-number-{{ ai_gen_id }}');
        statNumbers.forEach((stat, index) => {
          setTimeout(() => {
            const text = stat.textContent;
            const number = parseInt(text.replace(/\D/g, ''));
            
            if (number && number > 0) {
              this.animateNumber(stat, 0, number, text, 1000);
            }
          }, index * 200);
        });
      }

      animateNumber(element, start, end, originalText, duration) {
        const startTime = performance.now();
        const suffix = originalText.replace(/[\d,]/g, '');
        const animate = (currentTime) => {
          const elapsed = currentTime - startTime;
          const progress = Math.min(elapsed / duration, 1);
          const easeOutQuart = 1 - Math.pow(1 - progress, 4);
          const current = Math.round(start + (end - start) * easeOutQuart);
          element.textContent = current.toLocaleString() + suffix;
          
          if (progress < 1) {
            requestAnimationFrame(animate);
          }
        };
        
        requestAnimationFrame(animate);
      }

      disconnectedCallback() {
        if (this.observer) {
          this.observer.disconnect();}
        if (this.scrollTimeout) {
          clearTimeout(this.scrollTimeout);
        }
      }
    }

    customElements.define('creative-diagonal-layout-{{ ai_gen_id }}', CreativeDiagonalLayout{{ ai_gen_id }});
  })();
</script>

