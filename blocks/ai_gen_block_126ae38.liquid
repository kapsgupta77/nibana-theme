{% doc %}
  @prompt
    crate a full width content section

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-full-width-content-{{ ai_gen_id }} {
    width: 100vw;
    position: relative;
    left: 50%;
    right: 50%;
    margin-left: -50vw;
    margin-right: -50vw;
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.padding_top }}px 0 {{ block.settings.padding_bottom }}px 0;
  }

  .ai-full-width-content__container-{{ ai_gen_id }} {
    max-width: {{ block.settings.content_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-full-width-content__inner-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    align-items: {{ block.settings.text_alignment }};
    text-align: {{ block.settings.text_alignment }};
    gap: {{ block.settings.content_spacing }}px;
  }

  .ai-full-width-content__heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    line-height: 1.2;
    margin: 0;}

  .ai-full-width-content__text-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.6;
    margin: 0;
  }

  .ai-full-width-content__text-{{ ai_gen_id }} p {
    margin: 0 0 1em 0;
  }

  .ai-full-width-content__text-{{ ai_gen_id }} p:last-child {
    margin-bottom: 0;
  }

  .ai-full-width-content__button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_text_size }}px;
    font-weight: 500;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
  }

  .ai-full-width-content__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
    color: {{ block.settings.button_hover_text_color }};transform: translateY(-1px);
  }

  .ai-full-width-content__empty-state-{{ ai_gen_id }} {
    padding: 60px 20px;
    text-align: center;
    color: #666;
    font-style: italic;
  }

  @media screen and (max-width: 768px) {
    .ai-full-width-content-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_top | times: 0.7 }}px 0 {{ block.settings.padding_bottom | times: 0.7 }}px 0;
    }

    .ai-full-width-content__container-{{ ai_gen_id }} {
      padding: 0 16px;
    }

    .ai-full-width-content__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-full-width-content__text-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.9 }}px;
    }

    .ai-full-width-content__button-{{ ai_gen_id }} {
      padding: {{ block.settings.button_padding_vertical | times: 0.8 }}px {{ block.settings.button_padding_horizontal | times: 0.9 }}px;
      font-size: {{ block.settings.button_text_size | times: 0.9 }}px;
    }
  }

  @media screen and (max-width: 480px) {
    .ai-full-width-content__inner-{{ ai_gen_id }} {
      align-items: stretch;
      text-align: {{ block.settings.mobile_text_alignment }};
    }

    .ai-full-width-content__button-{{ ai_gen_id }} {
      width: 100%;
    }
  }
{% endstyle %}

<div class="ai-full-width-content-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-full-width-content__container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank or block.settings.text != blank or block.settings.button_text != blank %}
      <div class="ai-full-width-content__inner-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-full-width-content__heading-{{ ai_gen_id }}">
            {{ block.settings.heading }}
          </h2>
        {% endif %}

        {% if block.settings.text != blank %}
          <div class="ai-full-width-content__text-{{ ai_gen_id }}">
            {{ block.settings.text }}
          </div>
        {% endif %}

        {% if block.settings.button_text != blank %}
          <a 
            href="{{ block.settings.button_link | default: '#' }}" 
            class="ai-full-width-content__button-{{ ai_gen_id }}"
          >
            {{ block.settings.button_text }}
          </a>
        {% endif %}
      </div>
    {% else %}
      <div class="ai-full-width-content__empty-state-{{ ai_gen_id }}">
        Add a heading, text, or button to get started
      </div>
    {% endif %}
  </div>
</div>

