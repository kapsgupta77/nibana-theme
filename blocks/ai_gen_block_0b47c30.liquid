{% doc %}
  @prompt
    create content section

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-content-section-{{ ai_gen_id }} {
    padding: {{ block.settings.padding_top }}px 0 {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-content-section-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-content-section-heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    margin: 0 0 {{ block.settings.heading_spacing }}px;
    font-size: {{ block.settings.heading_size }}px;
    line-height: 1.2;
  }

  .ai-content-section-subheading-{{ ai_gen_id }} {
    color: {{ block.settings.subheading_color }};
    margin: 0 0 {{ block.settings.content_spacing }}px;
    font-size: {{ block.settings.subheading_size }}px;
    line-height: 1.4;
  }

  .ai-content-section-content-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    margin: 0 0 {{ block.settings.content_spacing }}px;
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.6;
  }

  .ai-content-section-content-{{ ai_gen_id }} p {
    margin: 0 0 16px;
  }

  .ai-content-section-content-{{ ai_gen_id }} p:last-child {
    margin-bottom: 0;
  }

  .ai-content-section-buttons-{{ ai_gen_id }} {
    display: flex;
    gap: 16px;
    justify-content: {{ block.settings.text_alignment }};
    flex-wrap: wrap;margin-top: {{ block.settings.button_spacing }}px;
  }

  .ai-content-section-button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 12px 24px;
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: 16px;
    font-weight: 500;
    transition: all 0.3s ease;
    border: 2px solid transparent;
    min-height: 48px;
  }

  .ai-content-section-button-primary-{{ ai_gen_id }} {
    background-color: {{ block.settings.primary_button_bg }};
    color: {{ block.settings.primary_button_color }};
    border-color: {{ block.settings.primary_button_bg }};
  }

  .ai-content-section-button-primary-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.primary_button_hover_bg }};
    color: {{ block.settings.primary_button_hover_color }};
    border-color: {{ block.settings.primary_button_hover_bg }};
  }

  .ai-content-section-button-secondary-{{ ai_gen_id }} {
    background-color: {{ block.settings.secondary_button_bg }};
    color: {{ block.settings.secondary_button_color }};
    border-color: {{ block.settings.secondary_button_border }};
  }

  .ai-content-section-button-secondary-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.secondary_button_hover_bg }};
    color: {{ block.settings.secondary_button_hover_color }};
    border-color: {{ block.settings.secondary_button_hover_border }};
  }

  @media screen and (max-width: 749px) {
    .ai-content-section-{{ ai_gen_id }} {
      padding: {{ block.settings.mobile_padding_top }}px 0 {{ block.settings.mobile_padding_bottom }}px;
    }

    .ai-content-section-container-{{ ai_gen_id }} {
      padding: 0 16px;
    }

    .ai-content-section-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_heading_size }}px;
    }

    .ai-content-section-subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_subheading_size }}px;
    }

    .ai-content-section-content-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_text_size }}px;
    }

    .ai-content-section-buttons-{{ ai_gen_id }} {
      flex-direction: column;
      align-items: center;
    }

    .ai-content-section-button-{{ ai_gen_id }} {
      width: 100%;
      max-width: 300px;
    }
  }
{% endstyle %}

<div class="ai-content-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-content-section-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-content-section-heading-{{ ai_gen_id }}">
        {{ block.settings.heading }}
      </h2>
    {% endif %}

    {% if block.settings.subheading != blank %}
      <div class="ai-content-section-subheading-{{ ai_gen_id }}">
        {{ block.settings.subheading }}
      </div>
    {% endif %}

    {% if block.settings.content != blank %}
      <div class="ai-content-section-content-{{ ai_gen_id }}">
        {{ block.settings.content }}
      </div>
    {% endif %}

    {% if block.settings.show_buttons %}
      <div class="ai-content-section-buttons-{{ ai_gen_id }}">
        {% if block.settings.primary_button_label != blank %}
          <a
            href="{{ block.settings.primary_button_link }}"
            class="ai-content-section-button-{{ ai_gen_id }} ai-content-section-button-primary-{{ ai_gen_id }}"
          >
            {{ block.settings.primary_button_label }}
          </a>
        {% endif %}

        {% if block.settings.secondary_button_label != blank %}
          <a
            href="{{ block.settings.secondary_button_link }}"
            class="ai-content-section-button-{{ ai_gen_id }} ai-content-section-button-secondary-{{ ai_gen_id }}"
          >
            {{ block.settings.secondary_button_label }}
          </a>
        {% endif %}
      </div>
    {% endif %}
  </div>
</div>

