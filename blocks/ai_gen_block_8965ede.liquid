    position: relative;
    width: 100%;
    min-height: {{ block.settings.banner_height }}px;
    background-color: {{ block.settings.background_color }};
    background-image: {% if block.settings.background_image %}url({{ block.settings.background_image | image_url: width: 2000 }}){% else %}none{% endif %};
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    display: flex;
    align-items: {{ block.settings.vertical_alignment }};
    justify-content: center;
    overflow: hidden;
  }

  .ai-video-banner-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, {{ block.settings.overlay_opacity | divided_by: 100.0 }});
  }

  .ai-video-banner-content-{{ ai_gen_id }} {
    position: relative;
    z-index: 2;
    text-align: {{ block.settings.text_alignment }};
    color: {{ block.settings.text_color }};
    max-width: {{ block.settings.content_width }}px;
    padding: 40px 20px;
    width: 100%;}

  .ai-video-banner-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight: {{ block.settings.title_weight }};
    margin: 0 0 {{ block.settings.title_spacing }}px 0;
    line-height: 1.2;}

  .ai-video-banner-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    font-weight: {{ block.settings.subtitle_weight }};
    margin: 0 0 {{ block.settings.subtitle_spacing }}px 0;
    line-height: 1.3;
    opacity: 0.9;
  }

  .ai-video-banner-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    margin: 0 0 {{ block.settings.description_spacing }}px 0;
    line-height: 1.5;
    opacity: 0.8;
  }

  .ai-video-banner-actions-{{ ai_gen_id }} {
    display: flex;
    gap: 20px;
    justify-content: {% if block.settings.text_alignment == 'center' %}center{% elsif block.settings.text_alignment == 'right' %}flex-end{% else %}flex-start{% endif %};
    align-items: center;
    flex-wrap: wrap;
  }

  .ai-video-banner-button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    padding: {{ block.settings.button_padding_y }}px {{ block.settings.button_padding_x }}px;
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: {{ block.settings.button_font_weight }};
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
    transition: all 0.3s ease;
  }

  .ai-video-banner-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_bg_color }};
    color: {{ block.settings.button_hover_text_color }};border-color: {{ block.settings.button_hover_border_color }};
    transform: translateY(-2px);
  }

  .ai-video-play-button-{{ ai_gen_id }} {
    position: relative;
    width: {{ block.settings.play_button_size }}px;
    height: {{ block.settings.play_button_size }}px;
    background-color: {{ block.settings.play_button_bg_color }};
    border: none;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
  }

  .ai-video-play-button-{{ ai_gen_id }}:hover {
    transform: scale(1.1);
    background-color: {{ block.settings.play_button_hover_bg_color }};}

  .ai-video-play-button-{{ ai_gen_id }}::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 0;
    height: 0;
    border-left: {{ block.settings.play_button_size | divided_by: 4 }}px solid {{ block.settings.play_button_icon_color }};
    border-top: {{ block.settings.play_button_size | divided_by: 6 }}px solid transparent;
    border-bottom: {{ block.settings.play_button_size | divided_by: 6 }}px solid transparent;margin-left: {{ block.settings.play_button_size | divided_by: 12 }}px;
  }

  .ai-video-play-button-{{ ai_gen_id }}::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: {{ block.settings.play_button_size | plus: 20 }}px;
    height: {{ block.settings.play_button_size | plus: 20 }}px;
    border: 2px solid {{ block.settings.play_button_bg_color }};
    border-radius:50%;
    opacity: 0.7;
    animation: ai-video-pulse-{{ ai_gen_id }} 2s infinite;
  }

  @keyframes ai-video-pulse-{{ ai_gen_id }} {
    0% {
      transform: translate(-50%, -50%) scale(1);
      opacity: 0.7;
    }
    50% {
      transform: translate(-50%, -50%) scale(1.2);
      opacity: 0.3;
    }
    100% {
      transform: translate(-50%, -50%) scale(1.4);
      opacity: 0;
    }
  }

  .ai-video-modal-{{ ai_gen_id }} {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.9);
    z-index: 9999;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s ease, visibility 0.3s ease;
  }

  .ai-video-modal-{{ ai_gen_id }}.active {
    opacity: 1;
    visibility: visible;
  }

  .ai-video-modal-content-{{ ai_gen_id }} {
    position: relative;
    width: 90%;
    max-width: 800px;
    aspect-ratio: 16/ 9;
    background-color: #000;
    border-radius: 8px;
    overflow: hidden;
    transform: scale(0.8);
    transition: transform 0.3s ease;
  }

  .ai-video-modal-{{ ai_gen_id }}.active .ai-video-modal-content-{{ ai_gen_id }} {
    transform: scale(1);
  }

  .ai-video-modal-iframe-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    border: none;
  }

  .ai-video-modal-close-{{ ai_gen_id }} {
    position: absolute;
    top: -40px;
    right: 0;
    background: none;
    border: none;
    color: white;
    font-size: 24px;
    cursor: pointer;
    padding: 8px;
    line-height: 1;
    transition: opacity 0.3s ease;
  }

  .ai-video-modal-close-{{ ai_gen_id }}:hover {
    opacity: 0.7;
  }

