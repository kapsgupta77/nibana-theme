<script>
  (function() {
    class AiVideoBanner{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.playButton = this.querySelector('.ai-video-play-button-{{ ai_gen_id }}');
        this.modal = this.querySelector('.ai-video-modal-{{ ai_gen_id }}');
        this.modalClose = this.querySelector('.ai-video-modal-close-{{ ai_gen_id }}');
        this.iframe = this.querySelector('.ai-video-modal-iframe-{{ ai_gen_id }}');

        this.setupEventListeners();
      }

      setupEventListeners() {
        if (this.playButton) {
          this.playButton.addEventListener('click', () => {
            this.openVideoModal();
          });
        }

        if (this.modalClose) {
          this.modalClose.addEventListener('click', () => {
            this.closeVideoModal();
          });
        }

        if (this.modal) {
          this.modal.addEventListener('click', (e) => {
            if (e.target === this.modal) {
              this.closeVideoModal();
            }
          });
        }document.addEventListener('keydown', (e) => {
          if (e.key === 'Escape' && this.modal.classList.contains('active')) {
            this.closeVideoModal();
          }
        });
      }

      openVideoModal() {
        const videoUrl = this.playButton.dataset.videoUrl;
        if (!videoUrl) return;

        const embedUrl = this.getYouTubeEmbedUrl(videoUrl);
        this.iframe.src = embedUrl;
        this.modal.classList.add('active');document.body.style.overflow = 'hidden';
      }

      closeVideoModal() {
        this.modal.classList.remove('active');
        this.iframe.src = '';
        document.body.style.overflow = '';
      }

      getYouTubeEmbedUrl(url) {
        const videoId = this.extractYouTubeId(url);
        return videoId ? `https://www.youtube.com/embed/${videoId}?autoplay=1&rel=0` : '';
      }

      extractYouTubeId(url) {
        const regExp = /^.*(youtu.be\/|v\/|u\/\w\/|embed\/|watch\?v=|&v=)([^#&?]*).*/;
        const match = url.match(regExp);
        return (match && match[2].length === 11) ? match[2] : null;
      }
    }

    customElements.define('ai-video-banner-{{ ai_gen_id }}', AiVideoBanner{{ ai_gen_id }});
  })();
</script>

