{% doc %}
  @prompt
    create a content section

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-content-section-{{ ai_gen_id }} {
    padding: {{ block.settings.padding_top }}px 0 {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-content-section__container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-content-section__eyebrow-{{ ai_gen_id }} {
    font-size: {{ block.settings.eyebrow_size }}px;
    color: {{ block.settings.eyebrow_color }};
    margin-bottom: 8px;
    text-transform: {{ block.settings.eyebrow_case }};
    font-weight: 500;
  }

  .ai-content-section__heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 16px;
    line-height: 1.2;
  }

  .ai-content-section__content-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1.6;
    margin-bottom: 24px;
  }

  .ai-content-section__content-{{ ai_gen_id }} p {
    margin: 0 0 16px;
  }

  .ai-content-section__content-{{ ai_gen_id }} p:last-child {
    margin-bottom: 0;
  }

  .ai-content-section__button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    padding: 12px 24px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-weight: 500;
    transition: background-color 0.3s ease;
  }

  .ai-content-section__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
    color: {{ block.settings.button_hover_text_color }};
  }

  @media screen and (max-width: 768px) {
    .ai-content-section-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_top | times: 0.7 }}px 0 {{ block.settings.padding_bottom | times: 0.7 }}px;
    }

    .ai-content-section__container-{{ ai_gen_id }} {
      padding: 0 16px;
    }

    .ai-content-section__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-content-section__eyebrow-{{ ai_gen_id }} {
      font-size: {{ block.settings.eyebrow_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-content-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-content-section__container-{{ ai_gen_id }}">
    {% if block.settings.eyebrow != blank %}
      <div class="ai-content-section__eyebrow-{{ ai_gen_id }}">
        {{ block.settings.eyebrow }}
      </div>
    {% endif %}

    {% if block.settings.heading != blank %}
      <h2 class="ai-content-section__heading-{{ ai_gen_id }}">
        {{ block.settings.heading }}
      </h2>
    {% endif %}

    {% if block.settings.content != blank %}
      <div class="ai-content-section__content-{{ ai_gen_id }}">
        {{ block.settings.content }}
      </div>
    {% endif %}

    {% if block.settings.button_text != blank and block.settings.button_url != blank %}
      <a href="{{ block.settings.button_url }}" class="ai-content-section__button-{{ ai_gen_id }}">
        {{ block.settings.button_text }}
      </a>
    {% endif %}
  </div>
</div>

