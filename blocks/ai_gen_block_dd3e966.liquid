{% doc %}
  @prompt
    Create a modern contact form section with left side image and right side contact form. The form should include fields for Name, Email, Phone Number, Subject, and Message, plus a terms agreement checkbox and Send Message button. Include email submission functionality and make the section fully customizable with design options like colors, spacing, typography, and layout settings including section margins. Use a placeholder image that can be easily replaced. Design should be stylish and modern with responsive layout.

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-contact-form-{{ ai_gen_id }} {
    margin: {{ block.settings.section_margin_top }}px {{ block.settings.section_margin_horizontal }}px {{ block.settings.section_margin_bottom }}px {{ block.settings.section_margin_horizontal }}px;
    border-radius: {{ block.settings.border_radius }}px;
    overflow: hidden;
    box-shadow: {{ block.settings.section_shadow_size }}px {{ block.settings.section_shadow_size }}px {{ block.settings.section_shadow_size | times: 2 }}px rgba(0, 0, 0, 0.1);
    background: {{ block.settings.section_background }};
  }

  .ai-contact-form-container-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: {{ block.settings.image_width }}% 1fr;
    min-height: {{ block.settings.section_min_height }}px;
    gap: 0;
  }

  .ai-contact-form-image-section-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
  }

  .ai-contact-form-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: 100%;
    min-height: {{ block.settings.section_min_height }}px;
  }

  .ai-contact-form-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .ai-contact-form-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: {{ block.settings.section_min_height }}px;
  }

  .ai-contact-form-image-placeholder-{{ ai_gen_id }} svg {
    width: 40%;
    height: 40%;
    opacity: 0.3;
    color: white;
  }

  .ai-contact-form-image-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};
  }

  .ai-contact-form-content-{{ ai_gen_id }} {
    padding: {{ block.settings.form_section_padding }}px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    background: {{ block.settings.form_section_background }};
  }

  .ai-contact-form-inner-{{ ai_gen_id }} {
    max-width: {{ block.settings.form_max_width }}px;
    width: 100%;
    margin: 0 auto;
  }

  .ai-contact-form-header-{{ ai_gen_id }} {
    text-align: {{ block.settings.title_alignment }};
    margin-bottom: {{ block.settings.title_margin }}px;
  }

  .ai-contact-form-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 12px 0;
    font-weight: 700;
    line-height: 1.2;
  }

  .ai-contact-form-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.description_color }};
    margin: 0;
    line-height: 1.5;
    opacity: 0.9;
  }

  .ai-contact-form-wrapper-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  .ai-contact-form-row-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
  }

  .ai-contact-form-field-{{ ai_gen_id }} {
    position: relative;
    display: flex;
    flex-direction: column;
  }

  .ai-contact-form-field-full-{{ ai_gen_id }} {
    grid-column: 1 / -1;
  }

  .ai-contact-form-label-{{ ai_gen_id }} {
    position: absolute;
    top: {{ block.settings.input_padding }}px;
    left: {{ block.settings.input_padding }}px;
    font-size: {{ block.settings.label_size }}px;
    color: {{ block.settings.label_color }};
    font-weight: 500;
    transition: all 0.3s ease;
    pointer-events: none;
    background: {{ block.settings.input_background }};
    padding: 0 8px;
    border-radius: 4px;
  }

  .ai-contact-form-input-{{ ai_gen_id }},
  .ai-contact-form-textarea-{{ ai_gen_id }} {
    padding: {{ block.settings.input_padding }}px;
    border: {{ block.settings.input_border_width }}px solid {{ block.settings.input_border_color }};
    border-radius: {{ block.settings.input_border_radius }}px;
    background-color: {{ block.settings.input_background }};
    color: {{ block.settings.input_text_color }};
    font-size: {{ block.settings.input_text_size }}px;
    transition: all 0.3s ease;
    outline: none;
  }

  .ai-contact-form-input-{{ ai_gen_id }}:focus,
  .ai-contact-form-textarea-{{ ai_gen_id }}:focus,
  .ai-contact-form-input-{{ ai_gen_id }}:not(:placeholder-shown),
  .ai-contact-form-textarea-{{ ai_gen_id }}:not(:placeholder-shown) {
    border-color: {{ block.settings.input_focus_border }};
    box-shadow: 0 0 0 3px {{ block.settings.input_focus_border }}22;
  }

  .ai-contact-form-input-{{ ai_gen_id }}:focus + .ai-contact-form-label-{{ ai_gen_id }},
  .ai-contact-form-textarea-{{ ai_gen_id }}:focus + .ai-contact-form-label-{{ ai_gen_id }},
  .ai-contact-form-input-{{ ai_gen_id }}:not(:placeholder-shown) + .ai-contact-form-label-{{ ai_gen_id }},
  .ai-contact-form-textarea-{{ ai_gen_id }}:not(:placeholder-shown) + .ai-contact-form-label-{{ ai_gen_id }} {
    top: -8px;
    font-size: {{ block.settings.label_size | minus: 2 }}px;
    color: {{ block.settings.input_focus_border }};
    font-weight: 600;
  }

  .ai-contact-form-textarea-{{ ai_gen_id }} {
    min-height: 120px;
    resize: vertical;
    font-family: inherit;
  }

  .ai-contact-form-checkbox-wrapper-{{ ai_gen_id }} {
    display: flex;
    align-items: flex-start;
    gap: 12px;
    padding: 16px;
    background: {{ block.settings.input_background }}88;
    border-radius: {{ block.settings.input_border_radius }}px;
    border: 1px solid {{ block.settings.input_border_color }};
  }

  .ai-contact-form-checkbox-{{ ai_gen_id }} {
    width: 20px;
    height: 20px;
    margin-top: 2px;
    accent-color: {{ block.settings.button_color }};
    border-radius: 4px;
  }

  .ai-contact-form-checkbox-label-{{ ai_gen_id }} {
    font-size: {{ block.settings.label_size }}px;
    color: {{ block.settings.label_color }};
    line-height: 1.4;
  }

  .ai-contact-form-button-{{ ai_gen_id }} {
    width: 100%;
    padding: {{ block.settings.button_padding }}px;
    background: linear-gradient(135deg, {{ block.settings.button_color }} 0%, {{ block.settings.button_hover_color }} 100%);
    color: {{ block.settings.button_text_color }};
    border: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_text_size }}px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .ai-contact-form-button-{{ ai_gen_id }}::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.5s ease;
  }

  .ai-contact-form-button-{{ ai_gen_id }}:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
  }

  .ai-contact-form-button-{{ ai_gen_id }}:hover::before {
    left: 100%;
  }

  .ai-contact-form-button-{{ ai_gen_id }}:active {
    transform: translateY(0);
  }

  .ai-contact-form-success-{{ ai_gen_id }} {
    padding: 20px;
    background: linear-gradient(135deg, #d4edda 0%, #c3e6cb 100%);
    color: #155724;
    border-radius: {{ block.settings.input_border_radius }}px;
    margin-bottom: 24px;
    border: 1px solid #c3e6cb;
    text-align: center;
    font-weight: 500;
  }

  .ai-contact-form-error-{{ ai_gen_id }} {
    color: #dc3545;
    font-size: 12px;
    margin-top: 6px;
    font-weight: 500;
  }

  /* Responsive Design */
  @media screen and (max-width: 1024px) {
    .ai-contact-form-container-{{ ai_gen_id }} {
      grid-template-columns: 45% 1fr;
    }
    
    .ai-contact-form-content-{{ ai_gen_id }} {
      padding: {{ block.settings.form_section_padding | times: 0.8 }}px;
    }
  }

  @media screen and (max-width: 768px) {
    .ai-contact-form-{{ ai_gen_id }} {
      margin: {{ block.settings.section_margin_top | divided_by: 2 }}px {{ block.settings.section_margin_horizontal | divided_by: 2 }}px {{ block.settings.section_margin_bottom | divided_by: 2 }}px {{ block.settings.section_margin_horizontal | divided_by: 2 }}px;
    }

    .ai-contact-form-container-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      min-height: auto;
    }

    .ai-contact-form-image-wrapper-{{ ai_gen_id }} {
      min-height: 250px;
    }

    .ai-contact-form-content-{{ ai_gen_id }} {
      padding: {{ block.settings.form_section_padding | divided_by: 1.5 }}px;
    }

    .ai-contact-form-row-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 20px;
    }

    .ai-contact-form-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.8 }}px;
    }
  }

  @media screen and (max-width: 480px) {
    .ai-contact-form-{{ ai_gen_id }} {
      margin: {{ block.settings.section_margin_top | divided_by: 3 }}px 10px {{ block.settings.section_margin_bottom | divided_by: 3 }}px 10px;
    }
    
    .ai-contact-form-content-{{ ai_gen_id }} {
      padding: {{ block.settings.form_section_padding | divided_by: 2 }}px;
    }
  }
{% endstyle %}

<contact-form-{{ ai_gen_id }}
  class="ai-contact-form-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-contact-form-container-{{ ai_gen_id }}">
    <!-- Image Section -->
    <div class="ai-contact-form-image-section-{{ ai_gen_id }}">
      <div class="ai-contact-form-image-wrapper-{{ ai_gen_id }}">
        {% if block.settings.contact_image %}
          <img
            src="{{ block.settings.contact_image | image_url: width: 800 }}"
            alt="{{ block.settings.contact_image.alt | escape }}"
            class="ai-contact-form-image-{{ ai_gen_id }}"
            loading="lazy"
            width="{{ block.settings.contact_image.width }}"
            height="{{ block.settings.contact_image.height }}"
          >
        {% else %}
          <div class="ai-contact-form-image-placeholder-{{ ai_gen_id }}">
            {{ 'hero-apparel-1' | placeholder_svg_tag }}
          </div>
        {% endif %}
        {% if block.settings.show_image_overlay %}
          <div class="ai-contact-form-image-overlay-{{ ai_gen_id }}"></div>
        {% endif %}
      </div>
    </div>

    <!-- Form Section -->
    <div class="ai-contact-form-content-{{ ai_gen_id }}">
      <div class="ai-contact-form-inner-{{ ai_gen_id }}">
        {% if block.settings.title != blank or block.settings.description != blank %}
          <div class="ai-contact-form-header-{{ ai_gen_id }}">
            {% if block.settings.title != blank %}
              <h2 class="ai-contact-form-title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
            {% endif %}
            {% if block.settings.description != blank %}
              <div class="ai-contact-form-description-{{ ai_gen_id }}">{{ block.settings.description }}</div>
            {% endif %}
          </div>
        {% endif %}

        {% form 'contact' %}
          <div class="ai-contact-form-wrapper-{{ ai_gen_id }}">
            {% if form.posted_successfully? %}
              <div class="ai-contact-form-success-{{ ai_gen_id }}">
                {{ block.settings.success_message }}
              </div>
            {% endif %}

            <div class="ai-contact-form-row-{{ ai_gen_id }}">
              <div class="ai-contact-form-field-{{ ai_gen_id }}">
                <input
                  type="text"
                  id="contact-name-{{ ai_gen_id }}"
                  name="contact[name]"
                  class="ai-contact-form-input-{{ ai_gen_id }}"
                  value="{{ form.name }}"
                  placeholder=" "
                  required
                  {% if form.errors contains 'name' %}
                    aria-invalid="true"
                    aria-describedby="name-error-{{ ai_gen_id }}"
                  {% endif %}
                >
                <label for="contact-name-{{ ai_gen_id }}" class="ai-contact-form-label-{{ ai_gen_id }}">
                  Name *
                </label>
                {% if form.errors contains 'name' %}
                  <div id="name-error-{{ ai_gen_id }}" class="ai-contact-form-error-{{ ai_gen_id }}">
                    Name is required
                  </div>
                {% endif %}
              </div>

              <div class="ai-contact-form-field-{{ ai_gen_id }}">
                <input
                  type="email"
                  id="contact-email-{{ ai_gen_id }}"
                  name="contact[email]"
                  class="ai-contact-form-input-{{ ai_gen_id }}"
                  value="{{ form.email }}"
                  placeholder=" "
                  required
                  autocomplete="email"
                  {% if form.errors contains 'email' %}
                    aria-invalid="true"
                    aria-describedby="email-error-{{ ai_gen_id }}"
                  {% endif %}
                >
                <label for="contact-email-{{ ai_gen_id }}" class="ai-contact-form-label-{{ ai_gen_id }}">
                  Email *
                </label>
                {% if form.errors contains 'email' %}
                  <div id="email-error-{{ ai_gen_id }}" class="ai-contact-form-error-{{ ai_gen_id }}">
                    Please enter a valid email address
                  </div>
                {% endif %}
              </div>
            </div>

            <div class="ai-contact-form-row-{{ ai_gen_id }}">
              <div class="ai-contact-form-field-{{ ai_gen_id }}">
                <input
                  type="tel"
                  id="contact-phone-{{ ai_gen_id }}"
                  name="contact[phone]"
                  class="ai-contact-form-input-{{ ai_gen_id }}"
                  value="{{ form.phone }}"
                  placeholder=" "
                  autocomplete="tel"
                >
                <label for="contact-phone-{{ ai_gen_id }}" class="ai-contact-form-label-{{ ai_gen_id }}">
                  Phone Number
                </label>
              </div>

              <div class="ai-contact-form-field-{{ ai_gen_id }}">
                <input
                  type="text"
                  id="contact-subject-{{ ai_gen_id }}"
                  name="contact[subject]"
                  class="ai-contact-form-input-{{ ai_gen_id }}"
                  value="{{ form.subject }}"
                  placeholder=" "
                  required
                >
                <label for="contact-subject-{{ ai_gen_id }}" class="ai-contact-form-label-{{ ai_gen_id }}">
                  Subject *
                </label>
              </div>
            </div>

            <div class="ai-contact-form-field-{{ ai_gen_id }} ai-contact-form-field-full-{{ ai_gen_id }}">
              <textarea
                id="contact-message-{{ ai_gen_id }}"
                name="contact[body]"
                class="ai-contact-form-textarea-{{ ai_gen_id }}"
                required
                placeholder=" "
                {% if form.errors contains 'body' %}
                  aria-invalid="true"
                  aria-describedby="message-error-{{ ai_gen_id }}"
                {% endif %}
              >{{ form.body }}</textarea>
              <label for="contact-message-{{ ai_gen_id }}" class="ai-contact-form-label-{{ ai_gen_id }}">
                Message *
              </label>
              {% if form.errors contains 'body' %}
                <div id="message-error-{{ ai_gen_id }}" class="ai-contact-form-error-{{ ai_gen_id }}">
                  Message is required
                </div>
              {% endif %}
            </div>

            {% if block.settings.show_terms_checkbox %}
              <div class="ai-contact-form-checkbox-wrapper-{{ ai_gen_id }}">
                <input
                  type="checkbox"
                  id="contact-terms-{{ ai_gen_id }}"
                  name="contact[terms]"
                  class="ai-contact-form-checkbox-{{ ai_gen_id }}"
                  required
                >
                <label for="contact-terms-{{ ai_gen_id }}" class="ai-contact-form-checkbox-label-{{ ai_gen_id }}">
                  {{ block.settings.terms_text }}
                </label>
              </div>
            {% endif %}

            <button
              type="submit"
              class="ai-contact-form-button-{{ ai_gen_id }}"
            >
              {{ block.settings.button_text }}
            </button>
          </div>
        {% endform %}
      </div>
    </div>
  </div>
</contact-form-{{ ai_gen_id }}>

<script>
  (function() {
    class ContactForm{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.form = this.querySelector('form');
        this.setupFormValidation();
        this.setupFloatingLabels();
      }

      setupFloatingLabels() {
        const inputs = this.querySelectorAll('.ai-contact-form-input-{{ ai_gen_id }}, .ai-contact-form-textarea-{{ ai_gen_id }}');
        inputs.forEach(input => {
          if (input.value.trim() !== '') {
            input.setAttribute('data-filled', 'true');
          }

          input.addEventListener('input', () => {
            if (input.value.trim() !== '') {
              input.setAttribute('data-filled', 'true');
            } else {
              input.removeAttribute('data-filled');
            }
          });
        });
      }

      setupFormValidation() {
        if (!this.form) return;

        const inputs = this.form.querySelectorAll('input[required], textarea[required]');
        inputs.forEach(input => {
          input.addEventListener('blur', () => this.validateField(input));
          input.addEventListener('input', () => this.clearFieldError(input));
        });

        this.form.addEventListener('submit', (e) => {
          let isValid = true;
          inputs.forEach(input => {
            if (!this.validateField(input)) {
              isValid = false;
            }
          });

          if (!isValid) {
            e.preventDefault();
          }
        });
      }

      validateField(field) {
        const value = field.value.trim();
        let isValid = true;

        if (field.hasAttribute('required') && !value) {
          isValid = false;
        }

        if (field.type === 'email' && value && !this.isValidEmail(value)) {
          isValid = false;
        }

        if (isValid) {
          field.setAttribute('aria-invalid', 'false');
        } else {
          field.setAttribute('aria-invalid', 'true');
        }

        return isValid;
      }

      clearFieldError(field) {
        field.setAttribute('aria-invalid', 'false');
      }

      isValidEmail(email) {
        const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        return emailRegex.test(email);
      }
    }

    customElements.define('contact-form-{{ ai_gen_id }}', ContactForm{{ ai_gen_id }});
  })();
</script>

