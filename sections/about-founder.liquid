{% comment %}
About — Founder Card (compact story with image, quote, CTA)
Reusable anywhere; supports mint panel + color scheme.
{% endcomment %}

<section class="nb-about-founder {% if section.settings.mint_bg %}tone-mist{% endif %} {{ section.settings.color_scheme }}">
  <div class="nb-shell">
    <div class="nb-founder__wrap {% if section.settings.image_side == 'right' %}is-image-right{% endif %}">
      {% if section.settings.photo != blank %}
        <div class="nb-founder__media">
          {{ section.settings.photo | image_url: width: 800 | image_tag: class: 'nb-founder__img', alt: section.settings.name | escape }}
        </div>
      {% endif %}

      <div class="nb-founder__content">
        {% if section.settings.kicker != blank %}
          <p class="nb-kicker">{{ section.settings.kicker }}</p>
        {% endif %}

        <h2 class="nb-h2">{{ section.settings.heading }}</h2>

        {% if section.settings.story_rich != blank %}
          <div class="nb-rte nb-founder__rte">
            {{ section.settings.story_rich }}
          </div>
        {% endif %}

        <div class="nb-founder__meta">
          <div class="nb-founder__name">{{ section.settings.name }}</div>
          <div class="nb-founder__role">{{ section.settings.role }}</div>
        </div>

        {% if section.settings.quote != blank %}
          <blockquote class="nb-quote">{{ section.settings.quote }}</blockquote>
        {% endif %}

        {% if section.settings.cta_label != blank and section.settings.cta_link != blank %}
          <div class="nb-founder__cta">
            <a class="nb-cta" href="{{ section.settings.cta_link }}">{{ section.settings.cta_label }}</a>
          </div>
        {% endif %}
      </div>
    </div>
  </div>

  <style>
    .nb-about-founder .nb-founder__wrap{
      display:grid; gap: clamp(18px, 3vw, 36px);
      grid-template-columns: 1fr;
      align-items: center;
      background: var(--nb-panel, transparent);
      border-radius: 20px;
      padding: clamp(16px, 2.5vw, 28px);
      box-shadow: {% if section.settings.mint_bg %}0 10px 28px rgba(12,138,123,.08), 0 1px 0 rgba(255,255,255,.8) inset{% else %}none{% endif %};
    }
    .nb-about-founder.tone-mist .nb-founder__wrap{
      background: var(--nb-mist, #F3FAF8);
    }
    .nb-about-founder .nb-founder__media{ order: 0; }
    .nb-about-founder .nb-founder__img{
      width: 100%; height: auto; border-radius: 16px; display:block;
    }
    .nb-about-founder .nb-founder__content{ order: 1; }
    .nb-about-founder .nb-founder__name{ font-weight: 700; margin-top: 8px; }
    .nb-about-founder .nb-founder__role{ opacity:.75; }
    .nb-about-founder .nb-quote{
      margin: 16px 0 0; padding-left: 14px; border-left: 3px solid var(--nb-chocolate, #8A4F2B);
      font-style: italic;
    }
    .nb-about-founder .nb-founder__cta{ margin-top: 16px; }

    @media (min-width: 980px){
      .nb-about-founder .nb-founder__wrap{ grid-template-columns: 1.1fr 1.4fr; }
      .nb-about-founder .nb-founder__wrap.is-image-right .nb-founder__media{ order: 1; }
      .nb-about-founder .nb-founder__wrap.is-image-right .nb-founder__content{ order: 0; }
    }
  </style>
</section>

{% schema %}
{
  "name": "About—Founder Card",
  "class": "section-wrapper nb-about-founder-wrap",
  "settings": [
    { "type": "text", "id": "kicker", "label": "Kicker", "default": "Founder" },
    { "type": "text", "id": "heading", "label": "Heading", "default": "Why I do this" },
    { "type": "richtext", "id": "story_rich", "label": "Story", "default": "<p>I believe transformation sticks when it is embodied, playful and honest. My work is about helping you find that steadier system so clarity and aliveness become your norm.</p>" },
    { "type": "text", "id": "name", "label": "Name", "default": "Kapil" },
    { "type": "text", "id": "role", "label": "Role", "default": "Founder & Coach" },
    { "type": "textarea", "id": "quote", "label": "Pull-quote (optional)", "default": "We go at the pace of truth—no fluff; with respect, play and real change." },
    { "type": "image_picker", "id": "photo", "label": "Photo" },

    { "type": "select", "id": "image_side", "label": "Image position (desktop)", "default": "left",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "right", "label": "Right" }
      ]
    },

    { "type": "text", "id": "cta_label", "label": "CTA label", "default": "Book a 20-min free call" },
    { "type": "url",  "id": "cta_link",  "label": "CTA link",  "default": "" },

    { "type": "checkbox", "id": "mint_bg", "label": "Mint panel background", "default": true },
    { "type": "color_scheme", "id": "color_scheme", "label": "Color scheme", "default": "scheme-1" },

    { "type": "range", "id": "pad_top", "label": "Top padding", "min": 0, "max": 100, "step": 1, "unit": "px", "default": 0 },
    { "type": "range", "id": "pad_bottom", "label": "Bottom padding", "min": 0, "max": 100, "step": 1, "unit": "px", "default": 0 }
  ],
  "presets": [
    { "name": "About—Founder Card" }
  ]
}
{% endschema %}
