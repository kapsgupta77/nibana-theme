{% comment %}
Home — Get in Touch (CTA panel)
Two-choice panel to route users cleanly:
- Primary: Book call → /pages/book-a-call
- Secondary: Contact us → /pages/contact-us
Includes panel color + scheme controls. Inset (not full-bleed).
{% endcomment %}

<section class="nb-home-contact color-scheme-{{ section.settings.color_scheme }}"
         style="padding-block-start: {{ section.settings.pad_top }}px; padding-block-end: {{ section.settings.pad_bottom }}px; --nb-panel-bg: {{ section.settings.panel_color }};">
  <div class="nb-shell">
    <div class="nb-hgc__wrap">
      {% if section.settings.kicker != blank %}
        <p class="nb-kicker">{{ section.settings.kicker }}</p>
      {% endif %}

      <h2 class="nb-h2 nb-hgc__title">{{ section.settings.heading }}</h2>

      {% if section.settings.sub_rich != blank %}
        <div class="nb-rte nb-hgc__sub">{{ section.settings.sub_rich }}</div>
      {% endif %}

      <div class="nb-hgc__actions">
        {% if section.settings.primary_label != blank and section.settings.primary_link != blank %}
          <a class="nb-cta nb-cta--xl"
             href="{{ section.settings.primary_link }}"
             data-cta="booking-cta home-get-in-touch-primary">
            {{ section.settings.primary_label }}
          </a>
        {% endif %}

        {% if section.settings.secondary_label != blank and section.settings.secondary_link != blank %}
          <a class="nb-link nb-hgc__secondary"
             href="{{ section.settings.secondary_link }}"
             data-cta="home-get-in-touch-secondary">
            {{ section.settings.secondary_label }}
          </a>
        {% endif %}
      </div>

      {% if section.settings.note != blank %}
        <p class="nb-hgc__note">{{ section.settings.note }}</p>
      {% endif %}
    </div>
  </div>

  <style>
    .nb-home-contact .nb-hgc__wrap{
      background: var(--nb-panel-bg, var(--nb-mist, #F3FAF8));
      border-radius: 20px;
      padding: clamp(18px, 2.6vw, 32px);
      box-shadow: 0 10px 28px rgba(12,138,123,.08), 0 1px 0 rgba(255,255,255,.8) inset;
      text-align: center;
    }
    .nb-home-contact .nb-hgc__title{ margin: 0 0 10px; }
    .nb-home-contact .nb-hgc__sub{ margin: 0 0 14px; opacity:.95; }
    .nb-home-contact .nb-hgc__actions{
      display:flex; gap: 14px; justify-content:center; align-items:center; flex-wrap: wrap; margin-top: 8px;
    }
    .nb-home-contact .nb-hgc__secondary{ text-decoration: underline; }
    .nb-home-contact .nb-hgc__note{ margin: 12px 0 0; font-size: 14.5px; opacity:.8; }

    @media (max-width: 860px){
      .nb-home-contact .nb-hgc__actions{ flex-direction: column; gap: 10px; }
    }
  </style>
</section>

{% schema %}
{
  "name": "Home — Get in Touch",
  "class": "section-wrapper nb-home-contact-wrap",
  "settings": [
    { "type": "text", "id": "kicker", "label": "Kicker", "default": "Get in touch" },
    { "type": "text", "id": "heading", "label": "Heading", "default": "Ready to talk?" },
    { "type": "richtext", "id": "sub_rich", "label": "Short blurb", "default": "<p>If you’re exploring coaching, start with a free 20-min call. Prefer to write? We reply within 1–2 business days.</p>" },

    { "type": "text", "id": "primary_label", "label": "Primary label", "default": "Book a free 20-min call" },
    { "type": "text", "id": "primary_link",  "label": "Primary link",  "default": "/pages/book-a-call" },

    { "type": "text", "id": "secondary_label", "label": "Secondary label", "default": "Contact us" },
    { "type": "text", "id": "secondary_link",  "label": "Secondary link",  "default": "/pages/contact-us" },

    { "type": "text", "id": "note", "label": "Small reassurance note", "default": "We reply within 1–2 business days." },

    { "type": "checkbox", "id": "panel_on", "label": "Show panel background", "default": true },
    { "type": "color", "id": "panel_color", "label": "Panel background color", "default": "#F3FAF8" },
    { "type": "color_scheme", "id": "color_scheme", "label": "Color scheme", "default": "scheme-1" },

    { "type": "range", "id": "pad_top", "label": "Top padding", "min": 0, "max": 120, "step": 2, "unit": "px", "default": 0 },
    { "type": "range", "id": "pad_bottom", "label": "Bottom padding", "min": 0, "max": 120, "step": 2, "unit": "px", "default": 0 }
  ],
  "presets": [
    { "name": "Home — Get in Touch" }
  ]
}
{% endschema %}
