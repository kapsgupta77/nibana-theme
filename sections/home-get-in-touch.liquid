{% comment %}
Home — Get in touch
Panelized, non–full-bleed “ready to talk?” with primary CTA + secondary contact link.
Uses nb-shell for page width, and a soft mint panel to match About/Service sections.
{% endcomment %}

<section class="nb-home-contact {{ section.settings.color_scheme }}">
  <div class="nb-shell">
    <div class="nb-home-contact__panel">
      {% if section.settings.kicker != blank %}
        <p class="nb-kicker">{{ section.settings.kicker }}</p>
      {% endif %}

      <h2 class="nb-h2 nb-home-contact__title">{{ section.settings.heading }}</h2>

      {% if section.settings.copy != blank %}
        <p class="nb-home-contact__copy">{{ section.settings.copy }}</p>
      {% endif %}

      <div class="nb-home-contact__ctas">
        {% if section.settings.btn_label != blank and section.settings.btn_link != blank %}
          <a class="nb-cta nb-cta--xl" href="{{ section.settings.btn_link }}" data-cta="home-get-in-touch-primary">
            {{ section.settings.btn_label }}
          </a>
        {% endif %}

        {% if section.settings.contact_label != blank and section.settings.contact_link != blank %}
          <a class="nb-home-contact__link" href="{{ section.settings.contact_link }}">
            {{ section.settings.contact_label }}
          </a>
        {% endif %}
      </div>

      {% if section.settings.note != blank %}
        <p class="nb-home-contact__note">{{ section.settings.note }}</p>
      {% endif %}
    </div>
  </div>

  <style>
    /* Kill the wrapper's full-bleed background for this section only */
    #shopify-section-{{ section.id }}{ background: transparent !important; }
    #shopify-section-{{ section.id }} > .section-background{ display:none !important; }

    .nb-home-contact { padding-block: clamp(20px, 4vw, 36px); }

    /* Panel matches About/Service vibe */
    .nb-home-contact__panel{
      background: var(--nb-mist, #F3FAF8);
      border: 1px solid #e6ecea;
      border-radius: 20px;
      box-shadow:
        0 10px 28px rgba(12,138,123,.08),
        0 1px 0 rgba(255,255,255,.8) inset;
      padding: clamp(18px, 3vw, 28px);
      text-align: center;
    }

    .nb-home-contact .nb-kicker{
      margin: 0 0 6px;
      letter-spacing: .08em;
      text-transform: uppercase;
      font-size: 12px;
      opacity: .8;
    }

    .nb-home-contact__title{
      margin: 0 0 8px;
      line-height: 1.15;
    }

    .nb-home-contact__copy{
      margin: 0 auto clamp(14px, 2.2vw, 18px);
      max-width: 62ch;
      font-size: 16px;
      line-height: 1.55;
      color: var(--nb-ink, #223238);
      opacity: .95;
    }

    .nb-home-contact__ctas{
      display: inline-flex;
      gap: 18px;
      align-items: center;
      flex-wrap: wrap;
      justify-content: center;
      margin: 0 0 8px;
    }

    .nb-home-contact__link{
      display: inline-block;
      font-weight: 600;
      text-decoration: none;
      border-bottom: 1px solid transparent;
    }
    .nb-home-contact__link:hover{ border-bottom-color: currentColor; }

    .nb-home-contact__note{
      margin: 6px 0 0;
      font-size: 14px;
      opacity: .7;
    }
  </style>
</section>

{% schema %}
{
  "name": "Home — Get in touch",
  "class": "section-wrapper nb-home-contact-wrap",
  "settings": [
    { "type": "text", "id": "kicker", "label": "Kicker", "default": "Get in touch" },
    { "type": "text", "id": "heading", "label": "Heading", "default": "Ready to talk?" },
    { "type": "textarea", "id": "copy", "label": "Intro", "default": "If you're exploring coaching, start with a free 20-min call. Prefer to write? We reply within 1–2 business days." },

    { "type": "text", "id": "btn_label", "label": "Primary CTA label", "default": "Book a free 20-min call" },
    { "type": "text", "id": "btn_link",  "label": "Primary CTA link",  "default": "/pages/book-a-call" },

    { "type": "text", "id": "contact_label", "label": "Secondary link label", "default": "Contact us" },
    { "type": "text", "id": "contact_link",  "label": "Secondary link URL",  "default": "/pages/contact" },

    { "type": "text", "id": "note", "label": "Response note", "default": "We reply within 1–2 business days." },

    { "type": "color_scheme", "id": "color_scheme", "label": "Color scheme", "default": "scheme-1" },
    { "type": "range", "id": "pad_top", "label": "Top padding (px)", "min": 0, "max": 100, "step": 1, "default": 0, "unit": "px" },
    { "type": "range", "id": "pad_bottom", "label": "Bottom padding (px)", "min": 0, "max": 100, "step": 1, "default": 0, "unit": "px" }
  ],
  "presets": [
    { "name": "Home — Get in touch" }
  ]
}
{% endschema %}
