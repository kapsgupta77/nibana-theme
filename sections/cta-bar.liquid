<style>
  .cta-bar {
    background-color: {{ section.settings.bg_color }};
    padding: 40px 20px;
    text-align: center;
  }

  .cta-bar-inner {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: space-between;
    gap: 20px;
  }

  .cta-bar-heading {
    font-size: 24px;
    font-weight: 700;
    color: {{ section.settings.text_color }};
    flex: 1 1 auto;
    text-align: left;
  }

  .cta-bar-button {
    background-color: {{ section.settings.button_color }};
    color: {{ section.settings.button_text_color }};
    padding: 14px 32px;
    font-size: 16px;
    font-weight: 600;
    border: none;
    border-radius: 9999px;
    text-decoration: none;
    display: inline-block;
    transition: background-color 0.3s ease;
    white-space: nowrap;
  }

  .cta-bar-button:hover {
    background-color: {{ section.settings.button_hover_color }};
  }

  @media (max-width: 768px) {
    .cta-bar-inner {
      flex-direction: column;
      text-align: center;
    }

    .cta-bar-heading {
      text-align: center;
    }
  }
</style>

<section class="cta-bar">
  <div class="cta-bar-inner">
    <div class="cta-bar-heading">
      {{ section.settings.heading }}
    </div>
    {% if section.settings.button_label != blank and section.settings.button_link != blank %}
      <a class="cta-bar-button" href="{{ section.settings.button_link }}">
        {{ section.settings.button_label }}
      </a>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "CTA Bar",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading Text",
      "default": "Initial 20 Mins Complimentary Consultation"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "BOOK YOUR FREE SESSION NOW!"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Heading Text Color",
      "default": "#0b656e"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Button Color",
      "default": "#0b656e"
    },
    {
      "type": "color",
      "id": "button_hover_color",
      "label": "Button Hover Color",
      "default": "#07494f"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text Color",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
      "name": "CTA Bar",
      "category": "Custom"
    }
  ]
}
{% endschema %}
